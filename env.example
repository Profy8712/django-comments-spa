# =============================================================================
# Django core settings
# =============================================================================

# Django secret key (CHANGE IN REAL .env)
DJANGO_SECRET_KEY=change-me-in-production

# Debug mode: 1 = ON, 0 = OFF
DJANGO_DEBUG=0

# Comma-separated hosts/domains WITHOUT spaces
# Example:
# DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,3.120.10.20,your-domain.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,comments_backend,comments_frontend

# Timezone
DJANGO_TIME_ZONE=UTC

# Logging level: DEBUG | INFO | WARNING | ERROR
DJANGO_LOG_LEVEL=INFO


# =============================================================================
# Frontend / CORS / CSRF
# =============================================================================

# Comma-separated frontend origins (scheme REQUIRED)
FRONTEND_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# CSRF trusted origins (scheme REQUIRED)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173


# =============================================================================
# Database (PostgreSQL)
# =============================================================================

# Database engine: postgres | sqlite
DB_ENGINE=postgres

POSTGRES_DB=comments_db
POSTGRES_USER=comments_user
POSTGRES_PASSWORD=comments_pass
POSTGRES_HOST=db
POSTGRES_PORT=5432


# =============================================================================
# Redis (Channels + Celery result backend)
# =============================================================================

# Channel layer backend: redis | inmemory
CHANNEL_LAYER=redis

REDIS_HOST=redis
REDIS_PORT=6379


# =============================================================================
# RabbitMQ + Celery
# =============================================================================

# RabbitMQ default credentials
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Celery broker (RabbitMQ)
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//

# Celery results backend (Redis)
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Celery timezone
CELERY_TIMEZONE=UTC


# =============================================================================
# Optional service ports (ONLY if used in docker-compose)
# =============================================================================

BACKEND_PORT=8000
FRONTEND_PORT=5173
